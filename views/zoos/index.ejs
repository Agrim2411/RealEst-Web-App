<% layout('layouts/boilerplate')%>
    <div id="cluster-map"></div>
    <div class="container">
        <h1>All Zoos</h1>

        <% for (let zoo of zoos){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <%if(zoo.images.length) {%>
                            <img class="img-fluid" alt="" src="<%=zoo.images[0].url%>">
                            <% }else {%>
                                <img class="img-fluid" alt="" src="https://res.cloudinary.com/dg2j1ky8k/image/upload/v1656578299/ZooReview/gettyimages-1234383774-612x612_hi4q7d_ioijkm.jpg">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= zoo.title %>
                            </h5>

                            <p class="card-text">
                                <%= zoo.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted"><%= zoo.location%></small>
                            </p>
                            <a class="btn btn-primary" href="/zoos/<%=zoo._id%>">View <%=zoo.title%></a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </div>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const zoos = {
            features: <%- JSON.stringify(zoos) %>
        }
    </script>

    <script src="/javascripts/clusterMap.js"></script>