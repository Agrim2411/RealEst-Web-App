<%layout('layouts/boilerplate')%>
    <title>New Campground</title>
    <div class="row">
        <h1 class="text-center">Add New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title </label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                </div>

                <div class="mb-3">

                    <label for="location" class="form-label">Location </label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">&#8377;</span>
                        <input type="text" name="campground[price]" class="form-control" placeholder="0" aria-describedby="price-label" required>
                    </div>
                </div>
                <label class="form-label" for="image">Add Images</label>
                <input class="form-control" type="file" id="image" name="image" required multiple>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image Url </label>
                    <input class="form-control" type="text" id="image" name="campground[image]" required>
                </div> -->
                <div class="mb-3">
                    <label for="desp" class="form-label">Description </label>
                    <br>
                    <textarea class="form-control" name="campground[description]" id="desp" cols="30" rows="5" required></textarea>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Add Campground</button>
                </div>
            </form>
            <footer>
                <a href="/campgrounds">All Campgrounds</a>
            </footer>
        </div>
    </div>